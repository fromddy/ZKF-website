{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "jsx": "preserve",
    "strict": true,
    "useUnknownInCatchVariables": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "paths": {
      "@/test-utils": [
        "../config/jest/test-utils"
      ],
      "@/abi/*": [
        "./abi/*"
      ],
      "@/constants/*": [
        "./constants/*"
      ],
      "@/components/*": [
        "./components/*"
      ],
      "@/context/*": [
        "./context/*"
      ],
      "@/data/*": [
        "./data/*"
      ],
      "@/geodata/*": [
        "./geodata/*"
      ],
      "@/hooks/*": [
        "./hooks/*"
      ],
      "@/mocks/*": [
        "./mocks/*"
      ],
      "@/pages/*": [
        "./pages/*"
      ],
      "@/services/*": [
        "./services/*"
      ],
      "@/shared/*": [
        "./shared/*"
      ],
      "@/types/*": [
        "./types/*"
      ],
      "@/util/*": [
        "./util/*"
      ],
      // "@/packages/ui-lib/*": [
      //   "./packages/ui-lib/src/*"
      // ],
      
      // "@bibliotheca-dao/ui-lib": [
      //   "../../packages/ui-lib/src/index"
      // ],
      // "@bibliotheca-dao/core-lib/*": [
      //   "../../../packages/core-lib/src/*"
      // ],
      // "@bibliotheca-dao/core-lib": [
      //   "../../../packages/core-lib/src/index"
      // ]

      "@bibliotheca-dao/ui-lib/*": ["../../packages/ui-lib/src/*"],
      "@bibliotheca-dao/ui-lib": ["../../packages/ui-lib/src/index"],
      "@bibliotheca-dao/core-lib/*": ["../../packages/core-lib/src/*"],
      "@bibliotheca-dao/core-lib": ["../../packages/core-lib/src/index"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": [
    "**/node_modules",
    "**/.*/",
    ".next"
  ],

  "exclude": ["**/node_modules", "**/.*/"],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "**/*.json"
  ]
}
